<div class="container">

    <h2>Edit your information</h2><br>

    <% if @errors %>
    <%= erb :_error, layout: false, locals: { errors: @errors } %>
    <% end %>


    <form class="form-horizontal" action="/users/<%= current_user.id %>" method="post">
        <input type="hidden" name="_method" value="put">
        <div class="form-group">
            <label for="text" class="col-sm-3 control-label">Username</label>
            <div class="col-sm-9">
                <input type="text" placeholder="Username" class="form-control" name="user[username]" value="<%= current_user.username %>">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <input type="email" id="email" placeholder="Email" class="form-control" name="user[email]" value="<%= current_user.email %>">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-9">
                <input type="password" id="password" placeholder="Password" class="form-control" name="user[password_hash]" value="<%= current_user.password %>">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form> <!-- /form -->

    <form class="form-horizontal" action="/users/<%= current_user.id %>" method="post">
        <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-primary">Delete Account</button>
            </div>
        </div>
    </form>
</div> <!-- ./container -->
